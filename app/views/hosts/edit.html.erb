<h1>Edit <%= @hosts.fullname%> <%= @hosts.email%></h1>
<form action="/hosts/<%= @hosts.id%>" method="post">
	<div>
		<label>FullName:</label>
		<input type="text" name="host[fullname]" value="<%= @hosts.fullname%>">
	</div>
	<div>
		<label>Email:</label>
		<input type="text" name="host[email]" value="<%= @hosts.email%>">
	</div>
	<input type="submit" value="Update">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div><%= e %></div>
	<% end %>
<% end %>