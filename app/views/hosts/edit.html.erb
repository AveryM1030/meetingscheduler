<h1>Edit <%= @hosts.fullname%></h1>
<form action="/hosts/<%= @hosts.id%>" method="post">
	<div>

		<label>Full Name:</label>
		<input type="text" name="host[fullname]" value="<%= @hosts.fullname%>"  class="form-control">

	</div>
	<div>
		<label>Email:</label>
		<input type="text" name="host[email]" value="<%= @hosts.email%>"  class="form-control">
	</div>
	<input type="submit" value="Update">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-danger"><%= e %></div>
	<% end %>
<% end %>