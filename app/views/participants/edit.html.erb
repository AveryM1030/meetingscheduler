<h1>Edit <%= @participants.fullname %></h1>
<form action="/participants/<%= @participants.id %>" method="post">
	<div>
		<label>Participants's Full Name:</label>
		<input type="text" name="participants[fullname]" value="<%= @participants.fullname%>">
	</div>
	<div>
		<label>Participants's Email:</label>
		<input type="text" name="participants[email]" value="<%= @participants.email%>">
	</div>
	<input type="submit" value="Update">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div><%= e %></div>
	<% end %>
<% end %>