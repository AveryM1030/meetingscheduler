<h1>View <%= pluralize(@participants.count, "Participant") %></h1>
<table class="table table-striped">
	<thead>
		<th scope="col">Participant's Full Name</th>
		<th scope="col">Participant's Email</th>
	</thead>
	<tbody>
		<% @participants.each do |participant| %>
		<tr>
			<td><%= participant.fullname %></td>
			<td><%= participant.email %></td>
			<td>
				<a href="/participants/<%= participant.id %>/edit">Edit</a> |
				<a href="/participants/<%= participant.id %>/delete">Delete</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/participants/new">Create Participant</a>